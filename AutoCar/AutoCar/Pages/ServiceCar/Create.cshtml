@page
@model AutoCar.Pages.ServiceCar.CreateModel
@{
}

<div class="text-info">
    افزودن سرویس جدید
</div>

<hr />
<form method="post">
    <div class="border p-3">
        <div class="form-group row ">

            <div class="col-2 text-right">
                عنوان سرویس
            </div>
            <div class="col-5">
                <input asp-for="serviceTypeCar.Name" class="form-control">
                <span asp-validation-for="serviceTypeCar.Name"></span>

            </div>
            <br />
            <div class="form-group row">
                <div class="col-2 text-right">
                    قیمت
                </div>
                <div class="col-5">
                    <input type="number" asp-for="serviceTypeCar.Price" class="form-control">
                    <span asp-validation-for="serviceTypeCar.Price"></span>
                </div>
            </div>

            <div class="form-group row">

                <div class="col-5 offset-2">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-info form-control" value="ثبت" />
                        </div>
                        <div class="col-6">
                            <input asp-page="/ServiceCar/Index" type="submit" class="btn btn-outline-info form-control" value="بازگشت به لیست" />
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}