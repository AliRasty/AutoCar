@page
@model AutoCar.Pages.ServiceCar.IndexModel
@{
}
<h1>
    لیست سرویس ها
</h1>

<br />

<div class="border" style="background-color:white;">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-info">
                لیست سرویس های ما
            </h2>
        </div>
        <div class="col-6 text-right">

            <a asp-page="Create" class="btn btn-info">
                افزودن سرویس جدید
                <i class="fas fa-plus fa-sm"></i>
            </a>
        </div>
    </div>

</div>


<div>
    @if (Model.services.Count == 0)
    {
        <div class="alart alert-warning">

            سرویسی جهت نمایش یافت نشد. میتوانید از طریق
            <a asp-page="Create" class="btn btn-info">
                افزودن سرویس جدید

            </a>
            اقدام به افزودن سرویس کنید
        </div>

    }
    else
    {

        <table class="table table-secondary">
            <thead>
                <tr>

                    <th>سرویس</th>
                    <th> قیمت سرویس</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.services)
                {
                    <tr>


                        <td>@item.Name</td>
                        <td>@item.Price  (ریال)</td>
                        <td>
                            <div class="btn-group">
                                <button  type="button " asp-page="DetailsCar" asp-route-id="@item.Id" class="btn btn-outline-success">
                                    <i class=" bi-eye"></i> جزیئات
                                </button>
                                <button type="button" asp-page="EditCar" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                    <i class="bi-pencil"></i> ویرایش
                                </button>
                                <button type="button" asp-page="DeleteCar" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    <i class="bi-trash"></i> حذف
                                </button>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

















    }
</div>